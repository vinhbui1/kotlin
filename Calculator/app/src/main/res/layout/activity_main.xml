<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Shownumber" android:gravity="center|right" android:background="@color/dark"
            android:textColor="@color/white" android:textSize="30pt" android:layout_weight="4"
            android:clickable="false"/>
    <TableLayout
            android:layout_width="match_parent"
            android:background="@color/dark"
            android:layout_height="match_parent" android:layout_weight="4">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginBottom="1pt">
            <Button
                    android:layout_marginRight="1pt"
                    android:text="AC"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/buAc" android:background="@color/gray"
                    android:layout_weight="1" android:textSize="20pt" android:onClick="AClear"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="+/-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buPlusMinus" android:background="@color/gray"
                    android:layout_weight="1" android:textSize="20pt" android:onClick="buNumberEvent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buPersen" android:background="@color/gray"
                    android:layout_weight="1" android:textSize="20pt" android:onClick="PersenOP"/>
            <Button
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buDiv" android:background="@color/yellow"
                    android:textColor="@color/white" android:layout_weight="1" android:textSize="20pt"
                    android:onClick="Calculator"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginBottom="1pt"
        >
            <Button
                    android:layout_marginRight="1pt"
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bu7" android:background="@color/xam"
                    android:textColor="@color/white" android:layout_weight="1" android:textSize="20pt"
                    android:onClick="buNumberEvent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bu8" android:background="@color/xam"
                    android:textColor="@color/white" android:layout_weight="1" android:textSize="20pt"
                    android:onClick="buNumberEvent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bu9" android:background="@color/xam"
                    android:textColor="@color/white" android:layout_weight="1" android:textSize="20pt"
                    android:onClick="buNumberEvent"/>
            <Button
                    android:text="*"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buMul" android:background="@color/yellow"
                    android:textColor="@color/white" android:layout_weight="1" android:textSize="20pt"
                    android:onClick="Calculator"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginBottom="1pt"
        >
            <Button
                    android:layout_marginRight="1pt"
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bu4" android:background="@color/xam"
                    android:textColor="@color/white" android:layout_weight="1" android:textSize="20pt"
                    android:onClick="buNumberEvent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bu5" android:background="@color/xam"
                    android:textColor="@color/white" android:layout_weight="1" android:textSize="20pt"
                    android:onClick="buNumberEvent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bu6" android:background="@color/xam"
                    android:textColor="@color/white" android:layout_weight="1" android:textSize="20pt"
                    android:onClick="buNumberEvent"/>
            <Button
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bulMinus" android:background="@color/yellow"
                    android:textColor="@color/white" android:layout_weight="1" android:textSize="20pt"
                    android:onClick="Calculator"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginBottom="1pt">
            <Button
                    android:layout_marginRight="1pt"
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bu1" android:background="@color/xam"
                    android:textColor="@color/white" android:layout_weight="1" android:textSize="20pt"
                    android:onClick="buNumberEvent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bu2" android:background="@color/xam"
                    android:textColor="@color/white" android:layout_weight="1" android:textSize="20pt"
                    android:onClick="buNumberEvent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bu3" android:background="@color/xam"
                    android:textColor="@color/white" android:layout_weight="1" android:textSize="20pt"
                    android:onClick="buNumberEvent"/>
            <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buPlus" android:background="@color/yellow"
                    android:textColor="@color/white" android:layout_weight="1" android:textSize="20pt"
                    android:onClick="Calculator"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bu0"
                    android:background="@color/xam"
                    android:textColor="@color/white" android:textSize="20pt" android:onClick="buNumberEvent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="0"
                    android:text="."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buDot"
                    android:background="@color/xam" android:textColor="@color/white" android:textSize="20pt"
                    android:onClick="buNumberEvent"/>
            <Button
                    android:layout_weight="0.1"
                    android:text="="
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buEqual"
                    android:background="@color/yellow" android:textColor="@color/white" android:textSize="20pt"
                    android:onClick="equalOp"/>
        </TableRow>

    </TableLayout>
</LinearLayout>