<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:background="@color/gray"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:background="@drawable/input"
            android:layout_width="248dp"
            android:layout_height="107dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etCityname" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.496" android:text="..."/>
    <Button
            android:background="@drawable/button"
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buSelec"
            app:layout_constraintTop_toBottomOf="@+id/tvSun"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.459" android:onClick="Getsunset"/>
    <TextView
            android:text="Sun set Is ..."
            android:layout_width="225dp"
            android:layout_height="85dp"
            android:id="@+id/tvSun" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etCityname" android:layout_marginTop="100dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textSize="18sp"/>
    <TextView
            android:text="City"
            android:layout_width="127dp"
            android:layout_height="43dp" android:id="@+id/tvCity"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/etCityname"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/tvSun"
            android:gravity="center" app:layout_constraintHorizontal_bias="0.223"
            app:layout_constraintVertical_bias="0.551"/>
    <TextView
            android:text="Temp"
            android:layout_width="89dp"
            android:layout_height="38dp" android:id="@+id/tvTemp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/tvCity" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etCityname" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tvSun" app:layout_constraintHorizontal_bias="0.239"
            android:gravity="center"/>
</android.support.constraint.ConstraintLayout>